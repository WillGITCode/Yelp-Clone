<% include ../partials/header %>

<div class="container">

    <h1 style="text-align: center">Edit <%= foundUser.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= foundUser._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" value="<%= foundUser.username %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstName]" value="<%= foundUser.firstName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastName]" value="<%= foundUser.lastName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[email]" value="<%= foundUser.email %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[avatar]" value="<%= foundUser.avatar %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
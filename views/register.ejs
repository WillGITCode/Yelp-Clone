<% include ./partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="centered-jumbotron-heading">
                <h1>Sign Up</h1>
                <p>Don't miss out!</p>
            </div>    
            
            <form action="/register" method="post">
                <div class="form-group styled-form">
                    <label for="username">User Name</label>
                    <input class="form-control" type="text" name="username" autocomplete="off" required />
                </div>
                <div class="form-group styled-form">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" autocomplete="off" required />
                </div>
                <div class="form-group styled-form">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" autocomplete="off" required />
                </div>
                <div class="form-group styled-form">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="lastName" autocomplete="off" required />
                </div>
                <div class="form-group styled-form">
                    <label for="username">Email</label>
                    <input class="form-control" type="email" name="email" autocomplete="off" required />
                </div>
                <div class="form-group styled-form">
                    <label for="avatar">Profile Photo</label>
                    <input class="form-control" type="text" name="avatar" placeholder="Avatar Image url" autocomplete="off" />
                </div>
                <div class="form-group styled-form">
                    <button class="btn btn-md btn-primary btn-block">Sign Up!</button>
                </div>
                <div class="styled-form">
                  <hr>
                  <a href="/campgrounds">Back</a>
                  <hr>
                </div>
                <div class="form-group styled-form">
                    <label for="adminCode">Admin Code</label>
                    <input class="form-control" type="password" name="adminCode" placeholder="Admins Only" autocomplete="off" />
                </div>
            </form>
        </header>
    </div>
<% include ./partials/footer %>